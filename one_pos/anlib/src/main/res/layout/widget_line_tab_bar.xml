<?xml version="1.0" encoding="utf-8"?>
<com.gamesea.anlib.widget.linetab.LineTabBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/frist_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text=""
        android:textSize="14sp" />

    <View
        android:id="@+id/v_g"
        android:layout_width="1px"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical" />

    <com.gamesea.anlib.widget.linetab.HorizontalScrollViewImpl
        android:id="@+id/tab_hsv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/scroll_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        </LinearLayout>

    </com.gamesea.anlib.widget.linetab.HorizontalScrollViewImpl>

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="48dp"
        android:layout_height="48dp" />

</com.gamesea.anlib.widget.linetab.LineTabBar>