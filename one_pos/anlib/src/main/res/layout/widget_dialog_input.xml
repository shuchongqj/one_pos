<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/rect_white_20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="現在也開了"
            android:textColor="@color/font_6"
            android:textSize="@dimen/font_size_14" />

        <View
            android:id="@+id/tv_title_g"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_d4" />

        <RelativeLayout
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tv_message"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="false"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rect_round_border_gray_5"
                android:padding="15dp"
                android:textColor="@color/font_3"
                android:textSize="@dimen/font_size_14" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_d4" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_btn_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/font_6"
                android:textSize="@dimen/common_16" />

            <View
                android:id="@+id/tig"
                android:layout_width="1px"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@color/line_d4" />

            <TextView
                android:id="@+id/dialog_btn_sure"
                android:layout_width="0dp"
                android:layout_height="@dimen/common_btn_height"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/font_6"
                android:textSize="@dimen/common_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
