<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp550"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/button_dialog_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp20">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginTop="@dimen/dp5"
            android:padding="@dimen/dp5"
            android:src="@mipmap/ico_j_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp48"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp5"
            android:gravity="center_horizontal|center_vertical"
            android:text="充值"
            android:textColor="@color/font_3"
            android:textSize="@dimen/common_14" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp40"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/font_3"
            android:textSize="@dimen/font_14" />

        <EditText
            android:id="@+id/ev_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp55"
            android:layout_marginTop="@dimen/dp5"
            android:background="@drawable/bg_line_gray2"
            android:hint="请输入充值金额(元)"
            android:textColorHint="@color/font_9"
            android:textColor="@color/font_3"
            android:inputType="numberDecimal"
            android:padding="@dimen/dp5"
            android:textSize="@dimen/common_14" />

        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text=""
            android:textColor="@color/red"
            android:textSize="@dimen/font_14" />


        <Button
            android:id="@+id/btn_in_money"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_below="@id/ev_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp30"
            android:background="@drawable/bg_corner_theme"
            android:text="确认充值"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

</LinearLayout>
